<html>
    <head>
        <title>
            Quotes - Rebelbot
        </title>
        <link href="/css/ripds.css">
    </head>
    <body>
        <nav>
            <ul>
                <a href="/" id="logo">RebelBot</a>
                <li>
                    <a href="/quotes">Quotes</a>
                </li>
                <li>
                    <a href="/commands">Commands</a>
                </li>
            </ul>
        </nav>
        <table>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Response
                </th>
            </tr>
            <% commands.forEach(function(key) { %>
                <tr>
                    <td>
                        <%- key.name %>
                    </td>
                    <td>
                        <%- key.response %>
                    </td>
                    <td>
                        <form method="post" action="/papi/commands/delete/<%=key.name%>">
                            <input type="submit" name="delete" value="delete">
                        </form>
                    </td>
                </tr>
            <% }); %>
        </table>
        <form method="post" action="/papi/commands/add">
            <input name="name">
            <input name="response">
            <input type="submit" value="submit">
        </form>
    </body>
</html>
